<section class="sessao-editarOrcamento">
    <div class="bgmodal" id="modal">
        <div class="modal">
            <form action="/editarOrcamento" method="POST" id="orcamentos" name="orcamentos">
                <h1 class="titulo">Orçamentos</h1>
                <div class="orcainput">
                    <p class="orcamento">
                        <input type="hidden" placeholder="id" name="id" id="id" value="<%= exibirOrcamento.id %>">
                        <small>
                        <small class="orcamentoEdit">Peça</small>
                        <input type="text" placeholder="Peça:" name="peca" value="<%= exibirOrcamento.peca %>">
                        </small>
                    </p>
                    <p class="orcamento">
                        <small>
                        <small class="orcamentoEdit">Preço de compra</small>
                        <input class="orcamento" type="text" placeholder="Compra $:" name="compras" value="<%= exibirOrcamento.compras %>">
                        </small>
                        <small>
                        <small class="orcamentoEdit">Quantidade</small>
                        <input class="orcamento" type="text" placeholder="Quantidade:" name="quantidade" value="<%= exibirOrcamento.quantidade %>">
                        </small>
                        <small>
                        <small class="orcamentoEdit">Lucro %</small>
                        <input class="orcamento" type="text" placeholder="Lucro(%):" name="lucro" value="<%= exibirOrcamento.lucro %>">
                        </small>
                        <small>
                        <small class="orcamentoEdit">Preço de Venda</small>
                        <input class="orcamento" type="text" placeholder="Venda $:" name="venda" value="<%= exibirOrcamento.venda %>">
                        </small>
                    </p>
                    <p class="orcamento">
                        <small>
                        <small class="orcamentoEdit">Mão de Obra</small>
                        <input class="orcamento3" type="text" placeholder="Mão de Obra:" name="maodeobra" value="<%= exibirOrcamento.maodeobra %>"></small>
                        <small>
                        <small class="orcamentoEdit">Serviço</small>
                        <input class="orcamento2" type="text" placeholder="Serviços:" name="servicos" value="<%= exibirOrcamento.servicos%>"></small>
                    </p>
                </div>
            </form>
            <div class="modaldisplay">
                <p>
                    <button class="btn modalbtn" type="submit" form="orcamentos">Salvar</button>
                </p>
                <p>
                    <a href="/listaorcamento"><button class="btn modalbtn">Cancelar</button></a>
                </p>
            </div>
        </div>
    </div>
</section>